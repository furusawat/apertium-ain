<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="ain-twol" install="yes">
    <pipeline>
      <program name="hfst-strings2fst -S"/>
      <program name="hfst-compose-intersect">
        <file name=".deps/ain.twol.hfst"/>
      </program>
      <program name="hfst-fst2strings"/>
    </pipeline>
  </mode>

  <mode name="ain-morph" install="yes">
    <pipeline>
      <program name="hfst-proc -w">
        <file name="ain.automorf.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ain-lexd" install="yes">
    <pipeline>
      <program name="hfst-lookup">
        <file name=".deps/ain.LR.lexd.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ain-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="ain.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ain-tagger" install="yes">
    <pipeline>
      <program name="hfst-proc -w">
        <file name="ain.automorf.hfst"/>
      </program>
      <program name="cg-proc -w">
        <file name="ain.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ain-disam" install="yes">
    <pipeline>
      <program name="hfst-proc -w">
        <file name="ain.automorf.hfst"/>
      </program>
      <program name="cg-conv -a"/>
      <program name="vislcg3 --trace --grammar">
        <file name="ain.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

</modes>

